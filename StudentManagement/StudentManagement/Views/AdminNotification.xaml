<UserControl
    x:Class="StudentManagement.Views.AdminNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:component="clr-namespace:StudentManagement.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:StudentManagement.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:StudentManagement.Utils"
    xmlns:viewmodels="clr-namespace:StudentManagement.ViewModels"
    xmlns:views="clr-namespace:StudentManagement.Views"
    d:DesignHeight="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={utils:RatioConverter}, ConverterParameter='0.84'}"
    d:DesignWidth="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={utils:RatioConverter}, ConverterParameter='0.49'}"
    Background="{StaticResource CenterColumn}"
    DataContext="{DynamicResource AdminNotificationVM}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <ScrollViewer>
        <materialDesign:DialogHost
            CloseOnClickAway="True">
            <materialDesign:DialogHost.DialogContent>
                <ContentControl
                    Content="{Binding DialogItemViewModel}"
                    DataContext="{DynamicResource AdminNotificationVM}">
                    <ContentControl.Resources>
                        <DataTemplate
                            DataType="{x:Type viewmodels:CreateNewNotificationViewModel}">
                            <component:NewNotification
                                Width="600"
                                Height="500" />
                        </DataTemplate>
                        <DataTemplate
                            DataType="{x:Type viewmodels:ShowDetailNotificationViewModel}">
                            <component:ShowDetailNotification
                                Width="600"
                                Height="500" />
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>

            </materialDesign:DialogHost.DialogContent>
            <Grid>
                <StackPanel>
                    <TextBlock
                        Margin="16,8"
                        FontWeight="Bold"
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Danh sách lớp môn học" />
                    <Grid
                        Height="56"
                        Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="209*" />
                            <ColumnDefinition
                                Width="865*" />
                            <ColumnDefinition
                                Width="430*" />
                        </Grid.ColumnDefinitions>
                        <component:AdminNotificationSearchBar
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0.4,0"
                            DataContext="{DynamicResource AdminNotificationVM}" />
                        <Button
                            Grid.Column="2"
                            Margin="16,8,0,8"
                            Style="{StaticResource PrimaryButton}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger
                                    EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding CreateNotificationCommand}" />
                                    <i:InvokeCommandAction
                                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock
                                FontSize="14"
                                Text="Thêm thông báo"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </Button>
                    </Grid>
                    <DockPanel
                        Margin="16,4,0,0">
                        <StackPanel
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="16,8"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="Loại thông báo" />
                            <ComboBox
                                x:Name="cbTypeNotification"
                                Height="36"
                                Margin="8,8"
                                Padding="4"
                                materialDesign:HintAssist.Hint="Chọn loại thông báo"
                                BorderBrush="Gray"
                                FontSize="16"
                                Foreground="#01579b"
                                ItemsSource="{Binding TypeInMain, Source={StaticResource AdminNotificationVM}}"
                                SelectedItem="{Binding SearchType}"
                                Style="{StaticResource MaterialDesignComboBox}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger
                                        EventName="DropDownClosed">
                                        <i:InvokeCommandAction
                                            Command="{Binding SearchCommand}"
                                            CommandParameter="{Binding ElementName=cbTypeNotification}" />
                                    </i:EventTrigger>

                                </i:Interaction.Triggers>
                            </ComboBox>
                        </StackPanel>
                        <Button
                            Height="auto"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Visibility="Visible">
                            <i:Interaction.Triggers>
                                <i:EventTrigger
                                    EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding SeenNotificationCommand}" />
                                </i:EventTrigger>

                            </i:Interaction.Triggers>

                            <materialDesign:Badged
                                Badge="{Binding NumCardInBadged, UpdateSourceTrigger=PropertyChanged}">
                                <materialDesign:Badged.Style>
                                    <Style
                                        TargetType="materialDesign:Badged">
                                        <Setter
                                            Property="BadgeBackground"
                                            Value="{DynamicResource ErrorMain}" />
                                        <Setter
                                            Property="BadgeForeground"
                                            Value="{DynamicResource White}" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding NumCardInBadged, UpdateSourceTrigger=PropertyChanged}"
                                                Value="0">
                                                <Setter
                                                    Property="BadgeBackground"
                                                    Value="Transparent" />
                                                <Setter
                                                    Property="BadgeForeground"
                                                    Value="Transparent" />
                                            </DataTrigger>
                                            <!--<DataTrigger
                                                Binding="{Binding NumCardInBadged, UpdateSourceTrigger=PropertyChanged}"
                                                Value="!=0"
                                                >
                                                <Setter
                                                    Property="BadgeBackground"
                                                    Value="{DynamicResource ErrorMain}" />
                                                <Setter
                                                    Property="BadgeForeground"
                                                    Value="{DynamicResource White}" />
                                            </DataTrigger>-->
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:Badged.Style>

                                <materialDesign:PopupBox
                                    PlacementMode="BottomAndAlignRightEdges">
                                    <!--<materialDesign:PopupBox.Style>
                                        <Style TargetType="materialDesign:PopupBox">
                                            <Style.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding NumCardInBadged, UpdateSourceTrigger=PropertyChanged}"
                                                    Value="0">
                                                    <Setter
                                                        Property="Visibility"
                                                        Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PopupBox.Style>-->
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon
                                            Kind="Bell" />
                                    </materialDesign:PopupBox.ToggleContent>

                                    <Grid
                                        MaxHeight="300">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="*" />
                                                <RowDefinition
                                                    Height="5*" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                FontSize="24"
                                                Margin="8"
                                                FontWeight="Bold"
                                                Text="Thông báo" />
                                            <ScrollViewer
                                                Grid.Row="1"
                                                VerticalScrollBarVisibility="Visible">
                                                <ItemsControl
                                                    ItemsSource="{Binding Cards, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel
                                                                Margin="8 8 0 8" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <component:NotificationCardInBarge
                                                                Width="360"
                                                                Height="80"
                                                                Margin="0"
                                                                Padding="0" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Grid>
                                    </Grid>
                                </materialDesign:PopupBox>

                            </materialDesign:Badged>

                        </Button>


                    </DockPanel>
                    <ItemsControl
                        ItemsSource="{Binding RealCards, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <component:NotificationCard
                                    Margin="16,5,16,5"
                                    HorizontalAlignment="Stretch" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Grid>
        </materialDesign:DialogHost>
    </ScrollViewer>

</UserControl>