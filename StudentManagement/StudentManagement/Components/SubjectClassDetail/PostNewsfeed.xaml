<UserControl
    x:Class="StudentManagement.Components.PostNewsfeed"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:StudentManagement.Components"
    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:StudentManagement.Utils"
    x:Name="PostNewsFeedUC"
    d:DesignHeight="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={utils:RatioConverter}, ConverterParameter='0.7'}"
    d:DesignWidth="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={utils:RatioConverter}, ConverterParameter='0.49'}"
    Background="{DynamicResource Transparent}"
    mc:Ignorable="d">
    <Border Background="{DynamicResource White}" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="8"
                Opacity="0.3"
                ShadowDepth="0"
                Color="DarkGray" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <Ellipse
                    Width="46"
                    Height="46"
                    Margin="16,16,4,8"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Left">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{DynamicResource DefaultUserAvatar}" Stretch="Uniform" />
                    </Ellipse.Fill>
                </Ellipse>
                <Grid Margin="8,16,16,8" DockPanel.Dock="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="{Binding Post.PosterName}" />
                            <Image
                                Height="18"
                                Margin="4,0,0,0"
                                Source="{StaticResource BlueTick}"
                                ToolTip="Người dùng đã xác minh" />
                        </StackPanel>

                        <materialDesign:PopupBox Grid.Column="1" PlacementMode="BottomAndAlignCentres">
                            <StackPanel>
                                <Button
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.EditPost}"
                                    CommandParameter="{Binding ElementName=PostNewsFeedUC}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="PencilOutline" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="Chỉnh sửa" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.DeletePost}"
                                    CommandParameter="{Binding Path=DataContext.Post.PostId, ElementName=PostNewsFeedUC}"
                                    Foreground="{DynamicResource ErrorMain}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="DeleteOutline" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="Xóa" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:PopupBox>
                    </Grid>

                    <StackPanel
                        Grid.Row="1"
                        Margin="0,8,8,8"
                        Orientation="Horizontal">
                        <TextBlock Text="{Binding Post.PostTime, Converter={utils:DateTimeConverter}}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{Binding Post.PostTime, Converter={utils:DateTimeConverter}, ConverterParameter=full}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBlock FontWeight="Bold" Text=" · " />
                        <Image
                            Height="12"
                            Margin="0,0,0,0"
                            Source="{StaticResource Global}" />
                    </StackPanel>
                </Grid>
            </DockPanel>

            <TextBox
                Grid.Row="1"
                Margin="16,0,16,8"
                Style="{StaticResource TextBoxAsTextBlock}"
                Text="{Binding Post.PostText}" />

            <DockPanel Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Name="leftArrow"
                        Grid.Column="0"
                        Height="48"
                        Margin="16,0,8,16"
                        Source="{StaticResource LeftArrow}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShowButtonChangeImage}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                        <Image.InputBindings>
                            <MouseBinding
                                Command="{Binding ChangeImage}"
                                CommandParameter="{Binding ElementName=leftArrow}"
                                MouseAction="LeftClick" />
                        </Image.InputBindings>
                    </Image>

                    <Image
                        Grid.Column="1"
                        MaxHeight="300"
                        Margin="0,0,0,16"
                        Source="{Binding ImageSelectedShow, TargetNullValue={StaticResource ImageDefault}}"
                        Stretch="Uniform">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StackPostImage.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Image
                        Name="rightArrow"
                        Grid.Column="2"
                        Height="48"
                        Margin="8,0,16,16"
                        Source="{StaticResource RightArrow}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShowButtonChangeImage}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                        <Image.InputBindings>
                            <MouseBinding
                                Command="{Binding ChangeImage}"
                                CommandParameter="{Binding ElementName=rightArrow}"
                                MouseAction="LeftClick" />
                        </Image.InputBindings>
                    </Image>
                </Grid>
            </DockPanel>

            <Separator Grid.Row="3" Margin="16,0,16,0" />

            <DockPanel Grid.Row="4" Margin="16,8,16,16">
                <TextBlock DockPanel.Dock="Left" FontWeight="SemiBold">
                    <Run Text="{Binding PostComments.Count, Mode=OneWay}" />
                    <Run Text="bình luận" />
                </TextBlock>
                <StackPanel
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <TextBlock DockPanel.Dock="Right" FontWeight="SemiBold" Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShowComments}" Value="True">
                                        <Setter Property="Text" Value="Ẩn bình luận" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsShowComments}" Value="False">
                                        <Setter Property="Text" Value="Tất cả bình luận" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding ShowHideComments}"
                                CommandParameter="{Binding ElementName=icComments}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <materialDesign:PackIcon Cursor="Hand">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShowComments}" Value="True">
                                        <Setter Property="Kind" Value="ChevronUp" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsShowComments}" Value="False">
                                        <Setter Property="Kind" Value="ChevronDown" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="5">
                <ItemsControl
                    Name="icComments"
                    Grid.Row="1"
                    ItemsSource="{Binding PostComments}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel x:Name="Comment" Margin="16,8,16,8">
                                <Ellipse
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,4,8"
                                    VerticalAlignment="Top"
                                    DockPanel.Dock="Left">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{DynamicResource DefaultUserAvatar}" Stretch="Uniform" />
                                    </Ellipse.Fill>
                                </Ellipse>

                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Column="0"
                                        Margin="4,0,0,0"
                                        Padding="12"
                                        HorizontalAlignment="Left"
                                        Background="#e9ebee"
                                        CornerRadius="24"
                                        DockPanel.Dock="Left">
                                        <Border.ToolTip>
                                            <TextBlock Text="{Binding Time, Converter={utils:DateTimeConverter}, ConverterParameter=full}" />
                                        </Border.ToolTip>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding Username}" />
                                                <Image
                                                    Height="18"
                                                    Margin="4,0,0,0"
                                                    Source="{StaticResource BlueTick}"
                                                    ToolTip="Người dùng đã xác minh" />
                                            </StackPanel>
                                            <TextBox
                                                Grid.Row="1"
                                                Style="{StaticResource TextBoxAsTextBlock}"
                                                Text="{Binding Comment}" />
                                        </Grid>
                                    </Border>

                                    <materialDesign:PopupBox
                                        x:Name="MoreDetailComment"
                                        Opacity="0"
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        DockPanel.Dock="Right"
                                        PlacementMode="BottomAndAlignCentres">
                                        <materialDesign:PopupBox.ToggleContent>
                                            <materialDesign:PackIcon Kind="DotsHorizontal" />
                                        </materialDesign:PopupBox.ToggleContent>
                                        <StackPanel>
                                            <Button Command="{Binding ElementName=icComments, Path=DataContext.EditComment}">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{utils:MultiCommandParameterConverter}">
                                                        <Binding ElementName="txbMainComment" />
                                                        <Binding Path="Id" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Margin="0,0,8,0" Kind="PencilOutline" />
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontWeight="SemiBold"
                                                        Text="Chỉnh sửa" />
                                                </StackPanel>
                                            </Button>
                                            <Button
                                                Command="{Binding ElementName=icComments, Path=DataContext.DeleteComment}"
                                                CommandParameter="{Binding Path=DataContext.Id, ElementName=Comment}"
                                                Foreground="{DynamicResource ErrorMain}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Margin="0,0,8,0" Kind="DeleteOutline" />
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontWeight="SemiBold"
                                                        Text="Xóa" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </materialDesign:PopupBox>
                                </Grid>
                            </DockPanel>

                            <DataTemplate.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="MoreDetailComment"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Control.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="MoreDetailComment"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <DockPanel Grid.Row="6" Margin="16,0,16,16">
                <Ellipse
                    Width="40"
                    Height="40"
                    Margin="0,0,8,16"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Left">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{DynamicResource DefaultUserAvatar}" Stretch="Uniform" />
                    </Ellipse.Fill>
                </Ellipse>
                <TextBox
                    x:Name="txbMainComment"
                    Background="{DynamicResource Gray}"
                    Style="{StaticResource CommentTextBox}"
                    Tag="{Binding SendComment}">
                </TextBox>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
